@{
    ViewBag.Title = "Payment Canceled";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Ensure you're using a common layout
}

<div class="container text-center" style="padding-top: 50px;">
    <div class="card shadow-sm p-4">
        <div class="card-body">
            <i class="fas fa-times-circle" style="font-size: 80px; color: #dc3545;"></i>
            <h2 class="mt-3" style="color: #dc3545;">Payment Canceled</h2>
            <p class="lead">Your payment has been canceled. If this was a mistake, please try again.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-4">Return to Home</a>
        </div>
    </div>
</div>
